<% const name = label.toLowerCase().replace(/ /g, '_') %>
<div class="input_field" id="input_field_<%= name %>">
	<label for="<%= name%>" id="lable_<%= name %>"><%= label %></label>
	<input type="<%= type %>" invalid class="input_field_element" maxlength="<%= locals.maxLen ? maxLen : '100'%>" minlength="<%= locals.minLen ? minLen : '0'%>" min="<%= locals.minLen ? minLen : '0'%>" max="<%= locals.maxLen ? maxLen : '100'%>" name="<%= name %>" placeholder="<%= label %>" required autocomplete="<%= autocomplete %>" id="<%= name %>" value="<%= locals.value ? value : '' %>">
</div>